{
  "min_packer_version": "1.3.0",
  "variables": {
    "cores": "2",
    "memory": "2048",
    "disk_size": "20280",
    "ssh_user": "vagrant",
    "ssh_pass": "vagrant",
    "ssh_wait_timeout": "10000s",
    "box_name": "ubuntu-devel",
    "box_builddate": "{{ env `BUILDDATE`}}",
    "box_version": "1804.3",
    "distro_version": "18.04.3",
    "iso_checksum": "7d8e0055d663bffa27c1718685085626cb59346e7626ba3d3f476322271f573e",
    "vm_name": "{{ env `BUILDNAME`}}"
  },
  "builders": [
    {
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu1804.cfg <wait>",
        "initrd=/install/initrd.gz <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-setup/layoutcode=us <wait>",
        "console-setup/modelcode=pc105 <wait>",
        "keyboard-configuration/variant=USA <wait>",
        "keyboard-configuration/layout=USA <wait>",
        "grub-installer/bootdev=/dev/sda <wait>",
        "noapic <wait>",
        "-- <wait>",
        "<enter><wait>"
      ],
      "name": "{{user `vm_name`}}",
      "vm_name": "{{user `vm_name`}}",
      "boot_wait": "5s",
      "headless": true,
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "sata_port_count": 4,
      "hard_drive_nonrotational": true,
      "hard_drive_discard": true,
      "guest_additions_mode": "disable",
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "http://cdimages.ubuntu.com/ubuntu/releases/{{user `distro_version`}}/release/ubuntu-{{user `distro_version`}}-server-amd64.iso",
      "shutdown_command": "echo '{{user `ssh_pass`}}' | sudo -S /sbin/shutdown -hP now",
      "ssh_username": "{{user `ssh_user`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cores`}}"],
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--paravirtprovider", "kvm"],
        ["modifyvm", "{{.Name}}", "--nictype1", "82540EM"],
        ["modifyvm", "{{.Name}}", "--audio", "none"],
        ["modifyvm", "{{.Name}}", "--usb", "off"],
        ["modifyvm", "{{.Name}}", "--vrde", "off"],
        ["modifyvm", "{{.Name}}", "--vram", "128"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": "true",
      "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "script": "scripts/base.sh"
    },
    {
      "type": "shell",
      "pause_before": "30s",
      "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/vmtool.sh",
        "scripts/vagrant.sh",
        "scripts/devel.sh",
        "scripts/ansible.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "compression_level": 9,
      "output": "./boxes/{{user `vm_name`}}-vbox.box",
      "keep_input_artifact": false
    },
    {
      "type": "vagrant-cloud",
      "box_tag": "caio2k/ubuntu-devel",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{user `box_version`}}.{{ user `box_builddate`}}",
      "no_release": "true"
    }]
  ]
}

