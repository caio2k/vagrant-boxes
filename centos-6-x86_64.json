{
  "min_packer_version": "1.3.0",
  "variables": {
    "build_version": "{{env `BUILD_VERSION`}}",
    "cleanup_pause": "",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "headless": "true",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "iso_mirror": "http://ftp.cixug.es/CentOS",
    "no_proxy": "{{env `no_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "box_name": "centos",
    "distro_version": "6.10",
    "update": "false",
    "version": "0.1.0",
    "vm_name": "{{ env `BUILDNAME`}}"
  },
  "builders": [
    {
      "name": "{{user `vm_name`}}",
      "vm_name": "{{user `vm_name`}}",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "{{user `iso_mirror`}}/6.10/isos/x86_64/CentOS-6.10-x86_64-minimal.iso",
      "iso_checksum": "9cecc12a66c4f9a4225d18fe0aaab412ba367549",
      "iso_checksum_type": "sha1",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "disk_size": 204800,
      "http_directory": "http",
      "boot_command": ["<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos6.cfg<enter><wait>"],
      "boot_wait": "10s",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "90m",
      "shutdown_command": "sudo /sbin/halt -p now",
      "hard_drive_interface": "sata",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "480"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"],
        ["modifyvm", "{{.Name}}", "--chipset", "ich9"],
        ["modifyvm", "{{.Name}}", "--paravirtprovider", "kvm"],
        ["modifyvm", "{{.Name}}", "--nictype1", "virtio"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": "true",
      "script": "scripts/base.sh"
    },
    {
      "type": "shell",
      "pause_before": "30s",
      "scripts": [
        "scripts/ansible.sh",
        "scripts/vagrant.sh",
        "scripts/vmtool.sh",
        "scripts/cleanup.sh",
        "scripts/info.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "compression_level": 9,
      "output": "./boxes/{{user `vm_name`}}-vbox.box",
      "keep_input_artifact": false
    },
    {
      "type": "vagrant-cloud",
      "box_tag": "caio2k/centos",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{user `distro_version`}}-0",
      "no_release": "true"
    }]
  ]
}
