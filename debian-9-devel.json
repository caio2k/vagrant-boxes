{
  "min_packer_version": "1.3.0",
  "variables": {
    "cores": "2",
    "memory": "512",
    "disk_size": "10140",
    "ssh_user": "vagrant",
    "ssh_pass": "vagrant",
    "ssh_wait_timeout": "10000s",
    "debian_version": "9.6.0",
    "iso_checksum": "fcd77acbd46f33e0a266faf284acc1179ab0a3719e4b8abebac555307aa978aa242d7052c8d41e1a5fc6d1b30bc6ca6d62269e71526b71c9d5199b13339f0e25",
    "vm_name": "devel"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian9.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "passwd/root-login=false <wait>",
        "passwd/user-fullname={{user `ssh_user`}} <wait>",
        "passwd/username={{user `ssh_user`}} <wait>",
        "passwd/user-password=\"{{user `ssh_pass`}}\" <wait>",
        "passwd/user-password-again=\"{{user `ssh_pass`}}\" <wait>",
        "net.ifnames=0 <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "headless": false,
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_checksum_type": "sha512",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "https://cdimage.debian.org/debian-cd/{{user `debian_version`}}/amd64/iso-cd/debian-{{user `debian_version`}}-amd64-netinst.iso",
      "shutdown_command": "echo '{{user `ssh_pass`}}' | sudo -S /sbin/shutdown -hP now",
      "ssh_username": "{{user `ssh_user`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "type": "virtualbox-iso",
      "vm_name": "debian-{{user `debian_version`}}-{{user `vm_name`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cores`}}"],
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--chipset", "ich9"],
        ["modifyvm", "{{.Name}}", "--paravirtprovider", "kvm"],
        ["modifyvm", "{{.Name}}", "--nictype1", "virtio"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": "true",
      "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "script": "scripts/base.sh"
    },
    {
      "type": "shell",
      "pause_before": "30s",
      "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/vmtool.sh",
        "scripts/vagrant.sh",
        "scripts/devel.sh",
        "scripts/ansible.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "compression_level": 9,
      "output": "./boxes/debian-{{user `debian_version`}}-{{user `vm_name`}}-vbox.box",
      "keep_input_artifact": false
    },
    {
      "type": "vagrant-cloud",
      "box_tag": "caio2k/debian9",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{user `debian_version`}}-0",
      "no_release": "true"
    }]
  ]
}

