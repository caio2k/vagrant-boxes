{
  "min_packer_version": "1.3.0",
  "variables": {
    "cores": "2",
    "memory": "1024",
    "disk_size": "20280",
    "ssh_user": "vagrant",
    "ssh_pass": "vagrant",
    "ssh_wait_timeout": "10000s",
    "box_name": "debian-devel",
    "distro_version": "9.8.0",
    "iso_checksum": "cc4a6bd50925c1c4af98049060e304494bc9da61eb5eb272c556d67608de14d4e6a4b8bc1c9412a0f810083912e228569f3771ffffa7174538f3e26f45a05245",
    "vm_name": "{{ env `BUILDNAME`}}"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian9.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "passwd/root-login=false <wait>",
        "passwd/user-fullname={{user `ssh_user`}} <wait>",
        "passwd/username={{user `ssh_user`}} <wait>",
        "passwd/user-password=\"{{user `ssh_pass`}}\" <wait>",
        "passwd/user-password-again=\"{{user `ssh_pass`}}\" <wait>",
        "net.ifnames=0 <wait>",
        "<enter><wait>"
      ],
      "name": "{{user `vm_name`}}",
      "vm_name": "{{user `vm_name`}}",
      "boot_wait": "10s",
      "headless": false,
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "sata_port_count": 4,
      "hard_drive_nonrotational": true,
      "hard_drive_discard": true,
      "guest_additions_mode": "disable",
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_checksum_type": "sha512",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "https://cdimage.debian.org/debian-cd/{{user `distro_version`}}/amd64/iso-cd/debian-{{user `distro_version`}}-amd64-netinst.iso",
      "shutdown_command": "echo '{{user `ssh_pass`}}' | sudo -S /sbin/shutdown -hP now",
      "ssh_username": "{{user `ssh_user`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cores`}}"],
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--chipset", "ich9"],
        ["modifyvm", "{{.Name}}", "--paravirtprovider", "kvm"],
        ["modifyvm", "{{.Name}}", "--nictype1", "virtio"],
        ["modifyvm", "{{.Name}}", "--vram", "24"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": "true",
      "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "script": "scripts/base.sh"
    },
    {
      "type": "shell",
      "pause_before": "30s",
      "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/vmtool.sh",
        "scripts/vagrant.sh",
        "scripts/devel.sh",
        "scripts/ansible.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "compression_level": 9,
      "output": "./boxes/{{user `vm_name`}}-vbox.box",
      "keep_input_artifact": false
    },
    {
      "type": "vagrant-cloud",
      "box_tag": "caio2k/debian-devel",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{user `distro_version`}}-0",
      "no_release": "true"
    }]
  ]
}

