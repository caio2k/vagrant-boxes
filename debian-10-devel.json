{
  "min_packer_version": "1.3.0",
  "variables": {
    "cores": "2",
    "memory": "2048",
    "disk_size": "20280",
    "ssh_user": "vagrant",
    "ssh_pass": "vagrant",
    "ssh_wait_timeout": "10000s",
    "box_name": "debian-devel",
    "box_builddate": "{{ env `BUILDDATE`}}",
    "box_version": "10.0",
    "distro_version": "10.0",
    "distro_patch": "0",
    "iso_checksum": "d808985468652393cf31d30fe7d6f60f5041337980b25dd00f2ab9553248b564cf38174c8251f410ddbe221e57fefc78849f9879141e25a5dfb31d8043fccc5c",
    "vm_name": "{{ env `BUILDNAME`}}"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "name": "virtualbox",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian10.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "passwd/root-login=false <wait>",
        "passwd/user-fullname={{user `ssh_user`}} <wait>",
        "passwd/username={{user `ssh_user`}} <wait>",
        "passwd/user-password=\"{{user `ssh_pass`}}\" <wait>",
        "passwd/user-password-again=\"{{user `ssh_pass`}}\" <wait>",
        "net.ifnames=0 <wait>",
        "<enter><wait>"
      ],
      "vm_name": "{{user `vm_name`}}",
      "boot_wait": "10s",
      "headless": true,
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "iso_checksum_type": "sha512",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "https://cdimage.debian.org/mirror/cdimage/release/{{ user `distro_version` }}.{{ user `distro_patch` }}/amd64/iso-cd/debian-{{ user `distro_version` }}.{{ user `distro_patch` }}-amd64-netinst.iso",
      "shutdown_command": "echo '{{user `ssh_pass`}}' | sudo -S /sbin/shutdown -hP now",
      "ssh_username": "{{user `ssh_user`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "hard_drive_interface": "sata",
      "sata_port_count": 4,
      "hard_drive_nonrotational": true,
      "hard_drive_discard": true,
      "guest_additions_mode": "disable",
      "guest_os_type": "Debian_64",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cores`}}"],
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--paravirtprovider", "kvm"],
        ["modifyvm", "{{.Name}}", "--nictype1", "82540EM"],
        ["modifyvm", "{{.Name}}", "--audio", "none"],
        ["modifyvm", "{{.Name}}", "--usb", "off"],
        ["modifyvm", "{{.Name}}", "--vrde", "off"],
        ["modifyvm", "{{.Name}}", "--vram", "128"]
      ]
    },
    {
      "type":"qemu",
      "name": "qemu",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian10.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "passwd/root-login=false <wait>",
        "passwd/user-fullname={{user `ssh_user`}} <wait>",
        "passwd/username={{user `ssh_user`}} <wait>",
        "passwd/user-password=\"{{user `ssh_pass`}}\" <wait>",
        "passwd/user-password-again=\"{{user `ssh_pass`}}\" <wait>",
        "net.ifnames=0 <wait>",
        "<enter><wait>"
      ],
      "vm_name": "{{user `vm_name`}}",
      "boot_wait": "10s",
      "headless": true,
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "iso_checksum_type": "sha512",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "https://cdimage.debian.org/mirror/cdimage/release/{{ user `distro_version` }}.{{ user `distro_patch` }}/amd64/iso-cd/debian-{{ user `distro_version` }}.{{ user `distro_patch` }}-amd64-netinst.iso",
      "shutdown_command": "echo '{{user `ssh_pass`}}' | sudo -S /sbin/shutdown -hP now",
      "ssh_username": "{{user `ssh_user`}}",
      "ssh_password": "{{user `ssh_pass`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "accelerator": "kvm",
      "cpus": 2,
      "disk_discard": "unmap",
      "disk_interface": "virtio",
      "net_device": "virtio-net",
      "qemuargs": [
        [ "-m", "1024M" ],
        [ "-soundhw", "ac97" ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": "true",
      "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "script": "scripts/base.sh"
    },
    {
      "type": "shell",
      "pause_before": "30s",
      "execute_command": "echo '{{user `ssh_pass`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/vmtool.sh",
        "scripts/vagrant.sh",
        "scripts/devel.sh",
        "scripts/ansible.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "compression_level": 9,
      "output": "./boxes/{{user `vm_name`}}-vbox.box",
      "keep_input_artifact": false
    },
    {
      "type": "vagrant-cloud",
      "box_tag": "caio2k/debian-devel",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{user `distro_version`}}.{{ user `box_builddate`}}",
      "no_release": "true"
    }]
  ]
}

