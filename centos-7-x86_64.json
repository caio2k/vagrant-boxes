{
  "min_packer_version": "1.3.0",
  "variables": {
    "build_version": "{{env `BUILD_VERSION`}}",
    "iso_mirror": "http://ftp.cixug.es/CentOS",
    "ssh_password": "vagrant",
    "version_number": "7.6",
    "version_date": "1810",
    "iso_checksum": "38d5d51d9d100fd73df031ffd6bd8b1297ce24660dc8c13a3b8b4534a4bd291c",
    "cloud_token": "{{ env `ATLAS_TOKEN`}}"
  },
  "builders": [
    {
      "name": "CentOS-{{user `version_number`}}-x86_64-{{user `build_version`}}",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "{{user `iso_mirror`}}/7/isos/x86_64/CentOS-7-x86_64-Minimal-{{user `version_date`}}.iso",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "disk_size": 204800,
      "http_directory": "http",
      "boot_command": ["<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/centos7.cfg<enter><wait>"],
      "boot_wait": "10s",
      "ssh_username": "root",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "90m",
      "shutdown_command": "sudo /sbin/halt -h -p",
      "hard_drive_interface": "sata",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "480"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"],
        ["modifyvm", "{{.Name}}", "--chipset", "ich9"],
        ["modifyvm", "{{.Name}}", "--paravirtprovider", "kvm"],
        ["modifyvm", "{{.Name}}", "--nictype1", "virtio"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "expect_disconnect": "true",
      "script": "scripts/base.sh"
    },
    {
      "type": "shell",
      "pause_before": "30s",
      "scripts": [
        "scripts/ansible.sh",
        "scripts/vagrant.sh",
        "scripts/vmtool.sh",
        "scripts/cleanup.sh",
        "scripts/info.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
    [{
      "type": "vagrant",
      "compression_level": 9,
      "output": "./boxes/{{.BuildName}}.box",
      "keep_input_artifact": false
    },
    {
      "type": "vagrant-cloud",
      "box_tag": "caio2k/centos7",
      "access_token": "{{user `cloud_token`}}",
      "version": "{{user `version_number`}}-{{user `version_date`}}",
      "no_release": "true"
    }]

  ]
}
